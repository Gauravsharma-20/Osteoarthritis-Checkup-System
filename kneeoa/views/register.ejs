<div class="register-page">
  <div class="form">

      <h1 class="text-center mb-1" style="padding-left: 100"> REGISTER
      </h1>
      <%- include('partials/messages'); %>
      <form action="/users/register" method="POST">
        <div class="form-group">
          
          <input
            type="name"
            id="name"
            name="name"
            class="form-control"
            placeholder="Enter Name"
          />
        </div>
        <div class="form-group">
          
          <input
            type="email"
            id="email"
            name="email"
            class="form-control"
            placeholder="Enter Email"
          />
        </div>
        <div class="form-group">
          
          <input
            type="password"
            id="password"
            name="password"
            class="form-control"
            placeholder="Enter Password"
          />
        </div>
        <div class="form-group">
          
          <input
            type="password"
            id="password2"
            name="password2"
            class="form-control"
            placeholder="Confirm Password"
          />
        </div>
        <button type="submit" class="btn btn-primary btn-block">
          Register
        </button>
      </form>
      <p class="lead mt-4">Have An Account? <a href="/users/login">Login</a></p>
    </div>
  </div>